{
    "name": "yini-parser-ts",
    "version": "0.1.0",
    "private": true,
    "main": "dist/index.js",
    "scripts": {
        "test": "jest",
        "test:smoke": "cross-env IS_DEBUG='' jest tests/smoke",
        "tsc": "npx tsc -p ./tsconfig.json",
        "start": "cross-env IS_DEBUG=1 ts-node src/index.ts",
        "start-w-clean": "npm run tsc && npm run clean:ts-js && npm run start",
        "lint": "eslint src --ext .ts",
        "prepare": "husky install",
        "clean:ts-js": "bash scripts/clean-ts-js.sh"
    },
    "author": "Marko K. Sepp√§nen",
    "license": "Apache-2.0",
    "description": "A TypeScript parser for the YINI configuration format.",
    "dependencies": {
        "antlr4": "^4.13.2"
    },
    "devDependencies": {
        "@ianvs/prettier-plugin-sort-imports": "^4.4.2",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.15.3",
        "@typescript-eslint/eslint-plugin": "^8.32.1",
        "@typescript-eslint/parser": "^8.32.1",
        "cross-env": "^7.0.3",
        "eslint": "^9.27.0",
        "eslint-config-prettier": "^10.1.5",
        "eslint-plugin-prettier": "^5.4.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "lint-staged": "^16.0.0",
        "prettier": "^3.5.3",
        "ts-jest": "^29.3.4",
        "ts-node": "^10.9.2",
        "typescript": "^5.7.3"
    },
    "lint-staged": {
        "src/**/*.{js,jsx,json,ts,tsx,css,scss}": [
            "prettier --config ./.prettierrc --write"
        ]
    }
}
